{
    "reviews": {
        "get": {
            "tags": ["Reviews"],
            "summary": "Daftar ulasan/review",
            "description": "Mengambil daftar ulasan yang telah diverifikasi",
            "operationId": "getReviewsList",
            "parameters": [
                {
                    "name": "rating",
                    "in": "query",
                    "description": "Filter berdasarkan rating",
                    "required": false,
                    "schema": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 5
                    }
                },
                {
                    "name": "verified",
                    "in": "query",
                    "description": "Filter ulasan yang sudah diverifikasi",
                    "required": false,
                    "schema": {
                        "type": "boolean",
                        "default": true
                    }
                },
                {
                    "name": "page",
                    "in": "query",
                    "description": "Nomor halaman",
                    "required": false,
                    "schema": {
                        "type": "integer",
                        "default": 1
                    }
                },
                {
                    "name": "per_page",
                    "in": "query",
                    "description": "Jumlah item per halaman",
                    "required": false,
                    "schema": {
                        "type": "integer",
                        "default": 20,
                        "maximum": 100
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Daftar ulasan berhasil diambil",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Data ulasan berhasil diambil"
                                    },
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "current_page": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "data": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "../components/schemas.json#/Review"
                                                }
                                            },
                                            "total": {
                                                "type": "integer",
                                                "example": 75
                                            },
                                            "per_page": {
                                                "type": "integer",
                                                "example": 20
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "422": {
                    "$ref": "../components/responses.json#/ValidationError"
                },
                "500": {
                    "$ref": "../components/responses.json#/ServerError"
                }
            }
        },
        "post": {
            "tags": ["Reviews"],
            "summary": "Buat ulasan baru",
            "description": "Membuat ulasan/review baru untuk layanan Dinas Koperasi",
            "operationId": "createReview",
            "requestBody": {
                "$ref": "../components/requestBodies.json#/ReviewRequest"
            },
            "responses": {
                "201": {
                    "description": "Ulasan berhasil dibuat",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Ulasan berhasil dibuat dan menunggu verifikasi"
                                    },
                                    "data": {
                                        "$ref": "../components/schemas.json#/Review"
                                    }
                                }
                            }
                        }
                    }
                },
                "422": {
                    "$ref": "../components/responses.json#/ValidationError"
                },
                "500": {
                    "$ref": "../components/responses.json#/ServerError"
                }
            }
        }
    }
}
