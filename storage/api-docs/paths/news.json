{
    "news": {
        "get": {
            "tags": ["News"],
            "summary": "Daftar berita",
            "description": "Mengambil daftar berita yang dipublikasikan",
            "operationId": "getNewsList",
            "parameters": [
                {
                    "name": "search",
                    "in": "query",
                    "description": "Pencarian berdasarkan judul atau konten",
                    "required": false,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "category",
                    "in": "query",
                    "description": "Filter berdasarkan kategori",
                    "required": false,
                    "schema": {
                        "type": "string",
                        "enum": ["pengumuman", "kegiatan", "informasi", "berita"]
                    }
                },
                {
                    "name": "page",
                    "in": "query",
                    "description": "Nomor halaman",
                    "required": false,
                    "schema": {
                        "type": "integer",
                        "default": 1
                    }
                },
                {
                    "name": "per_page",
                    "in": "query",
                    "description": "Jumlah item per halaman",
                    "required": false,
                    "schema": {
                        "type": "integer",
                        "default": 10,
                        "maximum": 50
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Daftar berita berhasil diambil",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Data berita berhasil diambil"
                                    },
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "current_page": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "data": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "../components/schemas.json#/News"
                                                }
                                            },
                                            "total": {
                                                "type": "integer",
                                                "example": 50
                                            },
                                            "per_page": {
                                                "type": "integer",
                                                "example": 10
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "422": {
                    "$ref": "../components/responses.json#/ValidationError"
                },
                "500": {
                    "$ref": "../components/responses.json#/ServerError"
                }
            }
        }
    }
}
